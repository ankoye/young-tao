<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youngtao.uac.mapper.UserAuthMapper">

    <resultMap id="BaseResultMap" type="com.youngtao.uac.model.domain.UserAuth">
        <result property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="email" column="email" />
        <result property="telephone" column="telephone" />
        <result property="password" column="password" />
        <result property="role" column="role" typeHandler="com.youngtao.web.typehandler.JsonListTypeHandler"/>
        <result property="status" column="status" />
        <result property="updateTime" column="update_time" />
        <result property="createTime" column="create_time" />
    </resultMap>

    <insert id="insert0" keyProperty="id" useGeneratedKeys="true">
        insert into youngtao_uac.uac_user_auth(user_id, email, telephone, password, role, status, update_time, create_time)
        values (#{userId}, #{email}, #{telephone}, #{password}, #{role}, #{status}, #{updateTime}, #{createTime})
    </insert>

    <select id="login" resultMap="BaseResultMap">
        select * from uac_user_auth
        where password = #{password}
        and (email = #{account} or password = #{account})
    </select>
</mapper>