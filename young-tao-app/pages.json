{
	"easycom": {
		// 下载安装的方式需要前面的"@/"，npm安装的方式无需"@/"
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				// #ifdef MP
				"navigationBarTitleText": "樱桃 | 年轻人的购物商城",
				// #endif 
				"app-plus": {
					"titleNView": {
						"type": "transparent",
						"searchInput": {
							"backgroundColor": "rgba(235, 235, 235, .5)",
							"borderRadius": "16px",
							"align": "left",
							"placeholder": "搜一搜",
							"disabled": true,
							"placeholderColor": "#606266"
						},
						"buttons": [
							{
								"float": "left",
								"fontSrc": "/static/yticon.ttf",
								"text": "\ue60d",
								"fontSize": "26",
								"color": "#303133",
								"background": "rgba(0,0,0,0)"
							}, {
								"float": "right",
								"fontSrc": "/static/yticon.ttf",
								"text": "\ue744",
								"fontSize": "27",
								"color": "#303133",
								"background": "rgba(0,0,0,0)",
								"redDot": true
							}
						]
					}
				}
			}
		},
		{
			"path" : "pages/category/category",
			"style" : {}
		},
		{
			"path" : "pages/live/live",
			"style" : {}
		},
		{
			"path" : "pages/cart/cart",
			"style" : {}
		},
		{
			"path" : "pages/user/user",
			"style": {
				"navigationBarTitleText": "我的",
				// #ifdef MP
				"navigationStyle": "custom",
				// #endif
				"app-plus": {
					"bounce": "none",
					"titleNView": {
						"type": "transparent",
						"buttons": [{
								"fontSrc": "/static/yticon.ttf",
								"text": "\ue60f",
								"fontSize": "24",
								"color": "#303133",
								"width": "46px",
								"background": "rgba(0,0,0,0)"
							},
							{
								"fontSrc": "/static/yticon.ttf",
								"text": "\ue744",
								"fontSize": "28",
								"color": "#303133",
								"background": "rgba(0,0,0,0)",
								"redDot": true
							}
						]
					}
				}
			}
		}
  ],
	"globalStyle": {
		"navigationBarBackgroundColor": "#FFF",
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"backgroundColor": "#FAFAFA"
	},
	"tabBar": {
		"color": "#707070",
		"selectedColor": "#FF4040",
		"backgroundColor": "#FFFFFF",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tabbar/tab_home.png",
				"selectedIconPath": "static/tabbar/tab_home_sel.png"
			}, {
				"pagePath": "pages/category/category",
				"text": "分类",
				"iconPath": "static/tabbar/tab_category.png",
				"selectedIconPath": "static/tabbar/tab_category_sel.png"
			}, {
				"pagePath": "pages/live/live",
				"text": "直播",
				"iconPath": "static/tabbar/tab_live.png",
				"selectedIconPath": "static/tabbar/tab_live_sel.png"
			},
			{
				"pagePath": "pages/cart/cart",
				"text": "购物车",
				"iconPath": "static/tabbar/tab_cart.png",
				"selectedIconPath": "static/tabbar/tab_cart_sel.png"
			},
			{
				"pagePath": "pages/user/user",
				"text": "我的",
				"iconPath": "static/tabbar/tab_user.png",
				"selectedIconPath": "static/tabbar/tab_user_sel.png"
			}
		]
	}
}
